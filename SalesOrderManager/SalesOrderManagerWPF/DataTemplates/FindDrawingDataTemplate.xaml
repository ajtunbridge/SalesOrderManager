<UserControl x:Class="SalesOrderManagerWPF.DataTemplates.FindDrawingDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesOrderManagerWPF.DataTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Icon}"></Image>
            <TextBlock Text="{Binding ShortFileName}" VerticalAlignment="Center" Margin="5" FontSize="12"></TextBlock>
    </StackPanel>
</UserControl>
